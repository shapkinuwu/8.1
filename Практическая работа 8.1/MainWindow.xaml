<Window x:Name="Autorization" x:Class="Практическая_работа_8._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_работа_8._1"
        mc:Ignorable="d"
        Title="Престиж" Height="450" Width="800">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#FF3E3E3E" Offset="0"/>
            <GradientStop Color="#FF01050A" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid Margin="0,10,10,0">
        <Frame x:Name="Frame" NavigationUIVisibility="Hidden"/>
        <TextBox x:Name="textBox_login" HorizontalAlignment="Center" Margin="0,158,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="159"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Width="159"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,243,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click" Background="White"/>
    </Grid>
</Window>
